{
  "private": true,
  "name": "monorepo-with-turbo",
  "version": "1.0.0",
  "packageManager": "yarn@1.22.22",
  "description": "Monorepo for multiple React apps with shared domain packages",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*",
    "packages/widgets/*"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "turbo": "^2.7.2"
  },
  "scripts": {
    "build": "turbo run build --filter=./apps/*",
    "build:apps": "turbo run build --filter=./apps/*",
    "build:ci": "turbo run build --filter=./apps/* --no-daemon",
    "dev:all": "turbo run start --parallel --filter=./apps/*",
    "start:app-d": "turbo run start --filter=@repo/app-d",
    "start:app-e": "turbo run start --filter=@repo/app-e"
  }
}
